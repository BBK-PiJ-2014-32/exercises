print("Please enter a number: ");
String str = System.console().readLine();
int x = Integer.parseInt(str);
 
factorial(x);
int result = factorial(x);
println("The factorial of " + x + " is " + result);
 
int factorial(int n) {
	int result = 1;
		 while (n != 0) {
			result = result * n;
			n--;
			}		
		return result;
		}
	
	