 print("Please enter a number: ");
 String str = System.console().readLine();
 int x = Integer.parseInt(str);
 
 factorial(x);
 int result1 = factorial(x);
 println("The factorial of " + x + " is " + result1);
 
 int factorial(int n) {
	 if (n == 1) {
		 return 1;
	 } else {
		int result = n * factorial(n-1);
		return result;
		}
	}
